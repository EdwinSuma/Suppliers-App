@model PurchaseOrderDetailVM
@{
    var products = ViewData["Products"] as List<Product>;
}

<tr>
    <td>
        <!-- Dropdown for selecting products -->
        <select asp-for="ProductId" class="form-select product-select">
            <option value="">Select Product</option>
            @foreach (var product in products)
            {
                <option value="@product.ProductID" data-unit="@product.Unit">
                    @product.Name
                </option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </td>
    <td>
        <!-- Input for Quantity -->
        <input asp-for="Quantity" type="number" class="form-control quantity-field" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </td>
    <td>
        <!-- Unit field, auto-filled based on product selection -->
        <input asp-for="Unit" type="text" class="form-control unit-field" readonly />
    </td>
    <td>
        <!-- Input for Price -->
        <input asp-for="Price" type="number" class="form-control price-field" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </td>
    <td>
        <!-- Button to remove the row -->
        <button type="button" class="btn btn-danger remove-row">Remove</button>
    </td>
</tr>
