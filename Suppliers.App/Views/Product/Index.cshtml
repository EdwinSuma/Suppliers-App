@model List<ProductVM>


<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-arrow-left"></i>
    Back to Home Page
</a>

<a asp-controller="Product" asp-action="Add" class="btn btn-success">
    <i class="fas fa-plus"></i>
    Create new Product
</a>
<br /><br />

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        <i class="fas fa-circle-xmark"></i>
        No Product Records Found.
    </div>
}
else
{
    <table id="ProductTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Date Added</th>
                <th>Date Modified</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Qty</td>
                    <td>@item.Unit</td>
                    <td>@item.DateAdded</td>
                    <td>@item.DateModified</td>

                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductID"
                            class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.ProductID">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<form id="DeleteForm" asp-controller="Product" asp-action="Delete" method="post">
    <input type="hidden" id="HiddenProductId" name="Id" value="" />
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ProductTable').DataTable();
        });

        $('.deleteBtn').click(function (e) {
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((confirm) => {
                if (confirm) {
                    var btn = $(this);
                    var id = btn.data("id");
                    $("#HiddenProductId").val(id);
                    $("#DeleteForm").submit();
                }
            })
        });
    </script>

    }
