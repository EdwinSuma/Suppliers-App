@model SupplierVM

<h3>Create a new Supplier</h3>

<a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">
    <i class="fas fa-arrow-left"></i>
    Back
</a>

<form asp-controller="Supplier" asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="CompanyName">Company Name</label>
    <input type="text" asp-for="CompanyName" class="form-control" />
    <span asp-validation-for="CompanyName" class="text-danger"></span>
    <br />
    <label asp-for="Address">Address</label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
    <label asp-for="Representative">Representative</label>
    <input type="text" asp-for="Representative" class="form-control" />
    <span asp-validation-for="Representative" class="text-danger"></span>
    <br />
    <label asp-for="ContactNo">Contact Number</label>
    <input type="number" asp-for="ContactNo" class="form-control" />
    <span asp-validation-for="ContactNo" class="text-danger"></span>
    <br />


    <input type="submit" value="Add Supplier" class="btn btn-success" />
    <i class="fas fa-check" style="color: #63E6BE;"></i>

</form>

